#blockcomponent(GridComponent with "source=$iterations") 
    #tablestart
      <table class="list">
    #end
    #header
      <tr class="header">
        <td><a href="javascript:SortLink('Name');">Name</a></td>
        <td>Stories</td>
        <td>Tasks</td>
      </tr>
    #end
    #rowstart
      <tr class="oddrow">
    #end
    #alternateRowstart
      <tr class="evenrow">
    #end   
    #cells
      <td><a href="edit.rails?id=$item.id">$item.Name</a></td>
      <td align="center">$item.GetStoriesCount()</td>
      <td align="center">$item.GetTasksCount()</td>
    #end
    #empty
      <tr><td class="nodata_message" colspan="3">- no $entityNamePlural -</td></tr>
    #end
#end